{{#if visible}}
  {{#if active}}
    <div class="col-sm-4 text-center">
      <p class="lead"><code>ember-initials/adorable</code></p>
      {{ember-initials/adorable class="img-thumbnail" image=image size=size email=email}}
      <p class="example-intro">This component has been designed to display user avatar based on <a href="http://avatars.adorable.io/">avatars.adorable.io</a> service.</p>
      {{activate-button exampleName=exampleName activeExample=activeExample}}
    </div>

    <div class="col-sm-8">
      {{#bs-tab as |tab|}}
        {{#tab.pane title="Properties"}}
          <div class="form-group">
            <label>User email:</label>
            {{input placeholder="User email" value=email class="form-control" }}
          </div>

          <div class="form-group">
            <label>User Avatar Image Src:</label>
            {{input placeholder="Exmaple 'images/default.jpg' or absolute url" value=image class="form-control" }}
            <span class="help-block">If image will be empty or the loading will fail, the adorable avatars will play as fallback.</span>
          </div>

          <div class="form-group">
            <label>Size:</label>
            {{input placeholder="Size" value=size type="number" class="form-control" }}
          </div>
        {{/tab.pane}}

        {{#tab.pane title="Generated code"}}
          <pre>
            \{{ember-initials/image
              image="{{image}}"
              size={{size}}
              defaultImage="{{defaultImage}}"
            }}
          </pre>
        {{/tab.pane}}
      {{/bs-tab}}
    </div>
  {{else}}
    <div class="text-center">
      <p class="lead"><code>ember-initials/adorable</code></p>
      {{ember-initials/adorable class="img-thumbnail" image=image size=size email=email}}
      <p class="example-intro">This component has been designed to display user avatar based on <a href="http://avatars.adorable.io/">avatars.adorable.io</a> service.</p>
      {{activate-button exampleName=exampleName activeExample=activeExample}}
    </div>
  {{/if}}
{{/if}}
